<div class="text-center">
  <h2>{{title}}</h2>
 
  <p>{{contents}}</p>
  <p>Created by {{user.username}} on {{format_date createdAt}}</p>
  
</div>
<div class="comment-form">
  <form id="comment-form">
    <textarea id="comment-content" placeholder="Leave a comment..."></textarea>
    <button type="submit">Submit</button>
  </form>
</div>

<div class="comments">
  <h3>Comments:</h3>
  {{#each comments}}
    <div class="comment">
      <p>{{this.comment}}</p>
      <p>Comment by {{this.user.username}} on {{format_date this.createdAt}}</p>
      <!-- Include a button to delete the comment -->
      <button class="delete-comment-btn" data-comment-id="{{this.id}}">Delete</button>
    </div>
  {{/each}}
</div>

<script src="/js/comments.js"></script>